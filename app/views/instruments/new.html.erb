<div class="mx-auto">
  <h1 class='mb-12'>Add a new Assessment Instrument</h1>
  <%= simple_form_for @instrument do |f| %>
    <%= render "shared/error_messages", resource: f.object %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :subject_id do %>
      <%= f.collection_select :subject_id, Subject.all, :id, :name, include_blank: true  %>
    <% end %>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
