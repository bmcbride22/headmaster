<div class="border-b-2 border-b-violet-700  mt-8 py-4 px-4 ">
  <div>
    <h3><%=@course.title%></h3>
    <div class="ml-4">
      <p class="text-gray-500">Teacher: Mr. <%=@course.teacher.last_name%></p>
      <p class="text-gray-500"><%=@course.syllabus.title%></p>
      <p class="text-gray-500"><%=@course.cohort.students.count%> students</p>
      <p class= "text-gray-500"><%=@course.units.count%> units</p>
      <p class="text-gray-500"><%=@course.assessments.count%> assessments</p>
    </div>
  </div>
</div>
<div class="flex mt-12 space-x-2">
  <%= link_to "Edit", edit_course_path(@course), class: 'btn btn-primary'%>
  <%= link_to "Back to courses", courses_path, class: 'btn btn-secondary'%>
</div>
</div>
