<div class="border-b-2 border-b-violet-700  mt-8 py-4 px-4 ">
  <div>
    <h3><%=@course.title%></h3>
    <div class="ml-4">
      <p class="text-gray-500">Teacher: Mr. <%=@course.teacher.last_name%></p>
      <p class="text-gray-500"><%=@course.syllabus.title%></p>
      <p class="text-gray-500"><%=@course.cohort.students.count%> students</p>
      <p class= "text-gray-500"><%=@course.units.count%> units</p>
      <p class="text-gray-500"><%=@course.assessments.count%> assessments</p>
    </div>
  </div>
</div>
<div id="vue-chart" class="w-48">
  <%# <bar-chart/> %>
  <doughnut-chart/>
</div>
<div class="flex flex-col space-y-12">
  <div class="mt-8 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-visible  sm:-mx-6 lg:-mx-8">
      <div class="  inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300 bg-gray-50">
            <col>
            <% total_cols = 0 %>
            <% @course.syllabus.main_units.each do |unit| %>
              <% total_cols += unit.unit_assessments.count+unit.sections.count %>
              <colgroup span='<%= unit.unit_assessments.count+unit.sections.count  %>'></colgroup>
            <% end %>
            <thead class="bg-gray-50">
              <tr class="bg-gray-50 ">
                <th scope="col" rowspan='4' class="py-3.5 pl-4 pr-3 text-sm font-semibold text-center text-gray-900 sm:pl-6">Students</th>
                <th colspan='<%= total_cols %>' scope="colgroup" class="py-3.5 pl-4 pr-3  text-sm font-semibold text-gray-900 sm:pl-6 text-center">Course Outline</th>
              </tr>
              <tr class="bg-gray-50 ">
                <% @course.syllabus.main_units.each do |unit| %>
                  <th colspan='<%= unit.unit_assessments.count+unit.sections.count %>' scope="colgroup" class="py-3.5 pl-4 pr-3  text-sm font-semibold text-gray-900 sm:pl-6 text-center"><%= unit.title %></th>
                <% end %>
              </tr>
              <tr class="bg-gray-50 ">
                <% @course.syllabus.main_units.each do |unit| %>
                  <% unit.sections.each do |section| %>
                    <th scope="col" colspan='<%= section.assessments.count %>' class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6"><%= section.title %></th>
                  <% end %>
                <% end %>
              </tr>
              <tr class="bg-gray-50">
                <% @course.syllabus.main_units.each_with_index do |unit, unit_i| %>
                  <% unit.sections.each_with_index do |section, sec_i| %>
                    <% section.assessments.each_with_index do |assessment, assess_i| %>
                      <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">
                        <%= assessment.assessment_type %><br>
                        <%= unit_i +1 %>.<%= sec_i+1 %>.<%= assess_i+1 %>
                      </th>
                    <% end %>
                  <% end %>
                <% end %>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <% @course.cohort.students.each_with_index do |student, i| %>
                <% if i%2 == 0 %>
                  <tr>
                  <% else %>
                    <tr class="bg-gray-200">
                    <% end %>
                    <th scope="row" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6"><%= student.first_name %></th>
                    <% @course.syllabus.main_units.each do |unit| %>
                      <% unit.sections.each do |section| %>
                        <% section.assessments.each do |assessment| %>
                          <td class="py-3.5 pl-4 pr-3 text-sm text-gray-500 sm:pl-6"> x% </td>
                        <% end %>
                      <% end %>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-8 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto  sm:-mx-6 lg:-mx-8">
      <div class="  inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300 bg-gray-50">
            <colgroup span='3'></colgroup>
            <colgroup span='<%= @course.cohort.students.count%>'></colgroup>
            <thead class="bg-gray-50">
              <tr class="bg-gray-50 ">
                <th colspan='3' scope="colgroup" class="py-3.5 pl-4 pr-3  text-sm font-semibold text-gray-900 sm:pl-6 text-center">Course Outline</th>
                <th colspan='<%= @course.cohort.students.count%>' scope="colgroup" class="py-3.5 pl-4 pr-3 text-sm font-semibold text-center text-gray-900 sm:pl-6">Students</th>
              </tr>
            </thead>
            <thead class="bg-gray-50">
              <tr class="bg-gray-50 ">
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Unit</th>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Section</th>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Assessment</th>
                <% @course.cohort.students.each do |student| %>
                  <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6"><%= student.first_name[0] %>.<%= student.first_name[0] %> </th>
                <% end %>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <% @course.syllabus.main_units.each do |unit| %>
                <th rowspan='<%= unit.unit_assessments.count+unit.sections.count  %>'  class="py-3.5 pl-4 pr-3  text-sm font-semibold text-gray-900 sm:pl-6 text-center bg-gray-300"><%= unit.title %></th>
                <% unit.sections.each do |section| %>
                  <th rowspan='<%= section.assessments.count + 1%>' scope="rowgroup" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6 bg-gray-200 border border-b-gray-900"><%= section.title %></th>
                  <% section.assessments.each do |assessment| %>
                    <tr>
                      <th class="py-3.5 pl-4 pr-3  text-sm font-semibold text-gray-900 sm:pl-6 text-center bg-gray-100 border border-b-gray-900"><%= assessment.title %></th>
                      <% @course.cohort.students.each do |student| %>
                        <td class="py-3.5 pl-4 pr-3 text-sm text-gray-500 sm:pl-6"> 10% </td>
                      <% end %>
                    </tr>
                  <% end %>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="flex mt-12 space-x-2">
    <%= link_to "Edit", edit_course_path(@course), class: 'btn btn-primary'%>
    <%= link_to "Back to courses", courses_path, class: 'btn btn-secondary'%>
  </div>
</div>
