<div id="vue-chart">
  <div class="border-b-2 border-b-violet-700  my-4 py-4 px-4 ">
    <div class="flex justify-between mb-10">
      <h3 class><%=@course.title%></h3>
      <div class="">
        <drop-down :courses="<%= @courses.to_json %>" :current="<%= @courses.find_index({id: @course.id, title: @course.title})%>"></drop-down>
      </div>
    </div>
    <div  class="grid grid-cols-5 gap-2" >
      <div class="col-span-2 w-11/12 mx-auto">
        <div class="mx-auto space-y-6 h-auto p-4 border-2 shadow-md shadow-gray-300 border-gray-200 rounded-lg">
          <h4 class="font-bold text-lg ">Achievement Groups</h4>
          <hr class="!mt-2">
          <doughnut-chart class="!mt-0"></doughnut-chart>
          <hr class="!mt-2">
          <div class="flex flex-row-reverse pt-2">
            <%= link_to 'View all stats',  "#", class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
      <div class="col-span-3 ">
        <div class="bg-white  border-2 shadow-md shadow-gray-300 border-gray-200 rounded-lg px-8 pt-4 pb-8">
          <h4 class="font-bold text-lg mb-4 border-b-2 pb-2 border-gray-200"> Class Performance</h3>
          <line-chart></line-chart>
        </div>
      </div>
      <hr class="col-span-5 my-6">
      <div class="col-span-5">
        <easy-table :headers='<%= @headers.to_json %>' :items='<%= @student_row_items.to_json %>' alternating></easy-table>
      </div>
    </div>
    <div class="grid grid-cols-4 gap-6">
      <% @course.assessments.each do |assessment| %>
        <div class="border border-gray-300 rounded-md mt-12 py-4 px-4 col-span-2">
          <div>
            <h3><%= link_to assessment.title, assessment %></h3>
            <div class="ml-2 mt-2">
              <p class="text-gray-500"><%= assessment.unit.title %> unit weight: <%=assessment.weight%></p>
            </div>
          </div>
          <div class="flex mt-12">
            <%= link_to "Add Grades", add_grades_to_assessment_path(@course, assessment) , class: 'btn btn-primary'%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
