<div class="border-b-2 border-b-violet-700  my-4 py-4 px-4 ">
  <div class="flex justify-between">
    <h3><%=@course.title%></h3>
    <div class="flex space-x-2">
      <%= link_to 'Add Syllabus Unit', new_syllabus_unit_path(@course.syllabus), class: 'btn btn-primary' %>
      <%= link_to 'Add Assessment', new_syllabus_assessment_path(@course.syllabus), class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
<div id="vue-chart" >
  <easy-table :headers='<%= @headers.to_json %>' :items='<%= @student_row_items.to_json %>'></easy-table>
</div>
<div class="grid grid-cols-4 gap-6">
  <% @course.assessments.each do |assessment| %>
    <div class="border border-gray-300 rounded-md mt-12 py-4 px-4 col-span-2">
      <div>
        <h3><%= link_to assessment.title, assessment %></h3>
        <div class="ml-2 mt-2">
          <p class="text-gray-500"><%= assessment.unit.title %> unit weight: <%=assessment.weight%></p>
        </div>
      </div>
      <div class="flex mt-12">
        <%= link_to "Add Grades", course_assessment_grades_path(@course, assessment) , class: 'btn btn-primary'%>
      </div>
    </div>
  <% end %>
</div>
