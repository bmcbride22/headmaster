<div class="border border-gray-300 rounded-md mt-12 py-4 px-4 max-w-lg mx-auto">
  <div>
    <div class="flex">
      <h3><%=@assessment.instrument.title%></h3>
      <%= button_to "Delete", assessment_path(@assessment), method: :delete, class: 'ml-2 text-red-400 text-xs' %>
    </div>
    <p class= "text-gray-500">Date: <%=@assessment.date.to_formatted_s(:long)%></p>
    <p class= "text-gray-500">Subject: <%=@assessment.instrument.subject.name%></p>
    <p class= "text-gray-500">Syllabus: <%=@assessment.syllabus.name%></p>
    <p class= "text-gray-500">Unit: <%=@assessment.unit.name%></p>
    <p class= "text-gray-500">Unit Weight: <%=@assessment.unit_weight.round%>%</p>
  </div>
  <div class="flex mt-12 space-x-2">
    <%= link_to "Edit", edit_assessment_path(@assessment), class: 'btn btn-primary'%>
    <%= link_to "Back", assessments_path, class: 'btn btn-secondary'%>
  </div>
</div>
