<div class="mx-auto">
  <h1 class='mb-12'>Create a new Cohort</h1>
  <%= simple_form_for @cohort do |f| %>
    <%= render "shared/error_messages", resource: f.object %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%# Add start and end date input %>
    <div class="flex flex-col mb-4">
      <label class="mb-2">Select semesters cohort will be active</label>
      <%= fields_for :semester_cohorts do |sem_f| %>
        <%= sem_f.collection_check_boxes :semester_ids, Semester.order(:start_date), :id, :title  do |b|%>
          <div class="flex mb-2">
            <%= b.check_box(class: 'focus:ring-2 focus:ring-orange-500 focus:ring-offset-2 h-4 w-4 text-orange-500 border-gray-300 rounded mr-4') %>
            <%= b.label(class: 'text-gray-600') %>
          </div>
        <% end %>
      <% end %>
    </div>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
