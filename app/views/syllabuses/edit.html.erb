<div class="mx-auto">
  <h1>Edit Instrument</h1>
  <%= simple_form_for @syllabus do |f| %>
    <%= render "shared/error_messages", resource: f.object %>
    <%= f.hidden_field :teacher_id, value: current_user.id%>
    <%= f.input :title%>
    <%= f.input :subject_id, collection: Subject.all %>
    <%= f.simple_fields_for :units do |unit| %>
      <%= unit.input :title, label: 'Unit Title'%>
      <%= unit.input :weight %>
      <%= unit.input :syllabus_id, as: :hidden, :input_html => { value: current_user.id } %>
    <% end %>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
