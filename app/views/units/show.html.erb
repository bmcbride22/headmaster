<div class=" border-b-2 border-violet-600" id="vue-chart" >
  <div class="flex justify-between">
    <div>
      <div class="flex">
        <h3><%=@unit.title%></h3>
        <%= button_to "Delete", unit_path(@unit), method: :delete, class: 'ml-2 text-red-400 text-xs' %>
      </div>
      <div class="flex space-x-4 mt-2">
        <p class= "text-gray-500"><span class="font-semibold">Syllabus:</span> <%=@unit.syllabus.title%></p>
      </div>
    </div>
    <div class="flex mt-4 space-x-2 h-11">
      <%= link_to "Edit unit", edit_unit_path(@unit), class: 'btn btn-primary'%>
      <%= link_to "View syllabus", @unit.syllabus, class: 'btn btn-secondary'%>
    </div>
  </div>
</div>
<div class="grid grid-cols-3 gap-6">
  <% @unit.assessments.each do |assessment| %>
    <div class="border border-gray-300 rounded-md mt-12 py-4 px-4 w-full mx-auto">
      <div>
        <div class="flex">
          <h3><%=assessment.title%></h3>
          <%= button_to "Delete", assessment_path(assessment), method: :delete, class: 'ml-2 text-red-400 text-xs' %>
        </div>
        <p class= "text-gray-500">Subject: <%=assessment.subject.name%></p>
        <p class= "text-gray-500">Syllabus: <%=assessment.syllabus.title%></p>
        <p class= "text-gray-500">Unit: <%=assessment.unit.title%></p>
        <p class= "text-gray-500">Unit Weight: <%=assessment.weight * 100%>%</p>
      </div>
      <div class="flex mt-12 space-x-2">
        <%= link_to "View", assessment_path(assessment), class: 'btn btn-primary'%>
      </div>
    </div>
  <% end %>
</div>
